<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgV_logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <RadioGroup
        android:id="@+id/radgrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgV_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">
    <RadioButton
        android:id="@+id/rdBtn_alumnos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alumnos"
        android:textSize="33dp"
        />
        <RadioButton
            android:id="@+id/rdBtn_maestros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maestros"
            android:textSize="33dp"
            android:layout_marginTop="10dp"
            />
    </RadioGroup>
    <Button
        android:id="@+id/btn_ingresarAct1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radgrupo"
        android:layout_marginTop="40dp"
        android:textSize="20dp"/>
</RelativeLayout>